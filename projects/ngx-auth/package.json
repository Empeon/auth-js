{
    "name": "@empeon/ngx-auth",
    "version": "1.0.0",
    "description": "Authentication and authorization support for Angular based desktop and mobile applications.",
    "homepage": "https://github.com/Empeon/auth-js/tree/main/projects/ngx-auth",
    "license": "GPL-3.0-only",
    "author": "Empeon",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Empeon/auth-js.git"
    },
    "keywords": [
        "angular",
        "ionic",
        "capacitor",
        "cordova",
        "hybrid",
        "authentication",
        "authorization",
        "oidc",
        "openidconnect",
        "openid",
        "security",
        "identity",
        "oauth2",
        "oauth",
        "auth",
        "authn",
        "web",
        "mobile"
    ],
    "scripts": {
        "lint": "nx run ngx-auth:lint",
        "test": "nx run ngx-auth:test",
        "build": "cd ../../ && nx run ngx-auth:build && nx run ngx-auth:copy-assets && nx run ngx-auth:build-schematics"
    },
    "dependencies": {
        "@empeon/auth-js": "1.0.0",
        "@hug/ngx-schematics-utilities": "^10.1.2",
        "tslib": "^2.7.0"
    },
    "peerDependencies": {
        "@angular/common": ">= 15",
        "@angular/core": ">= 15",
        "@angular/router": ">= 15",
        "rxjs": "^6.5.3 || ^7.4.0"
    },
    "publishConfig": {
        "access": "restricted",
        "registry": "https://npm.pkg.github.com"
    },
    "schematics": "./schematics/collection.json",
    "ng-add": {
        "save": "dependencies"
    }
